- provide :title, "Create Group"
%h1
  Create Group

.row
  .col-md-6.col-md-offset-3
    = form_for(@group) do |f|
      =render 'shared/error_messages'
      =f.label :name
      =f.text_field :name, class: 'form_control'

      = hidden_field_tag "user_id", @user.id

      =f.submit "Create Group", class: "btn btn-primary"
