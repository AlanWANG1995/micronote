%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    =link_to "MicroHard", root_path, id:"logo"
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li=link_to "Home", :root
        %li=link_to "Help", :help
        -if logged_in?
          %li=link_to 'Users', :users
          %li.dropdown
            %a.dropdown-toggle{href: "#", "data-toggle"=> "dropdown"}
              ="#{current_user.name}"
              %b.caret
            %ul.dropdown-menu
              %li=link_to "Profile", current_user
              %li=link_to "Settings", edit_user_path(current_user)
              %li.divider
                %li=link_to "Log out", logout_path, method: "delete"
          %li.user_icon
            = gravatar_for current_user, {size: 30}
        -else
          %li=link_to "Log in", :login
